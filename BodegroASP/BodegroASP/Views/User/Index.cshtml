@model List<BodegroASP.Models.UserViewModel>

@{
    ViewData["Title"] = "Doctor List";
}

<h1>Doctor List</h1>

<div class="text-right mb-3">
    <a asp-action="CreateDoctor" class="btn btn-success">Create Doctor</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].ID)</th>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a asp-action="UpdateDoctor" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>
                        <a asp-action="DeleteDoctor" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-info">Refresh List</a>
</div>
