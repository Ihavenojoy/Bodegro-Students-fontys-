@model SubscriptionViewModel
@{
    if (ViewBag.UserRole == "Admin")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
    }
}
<h1>Confirm Subscription</h1>
<p>Patiënt: @Model.Patient.Name (@Model.Patient.ID)</p>
<p>Protocool: @Model.Protocol.Name (@Model.Protocol.ID)</p>
<p>Start Datum: @Model.StartDate.ToString("dd-MM-yyyy")</p>

<form method="post" action="@Url.Action("CompleteSubscription", "Patient")">
    <input type="hidden" name="Patient.ID" value="@Model.Patient.ID" />
    <input type="hidden" name="Protocol.ID" value="@Model.Protocol.ID" />
    <input type="hidden" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
    <button type="submit">Bevestigen en opslaan</button>
</form>
