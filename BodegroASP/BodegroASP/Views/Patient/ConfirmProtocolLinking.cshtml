@model SubscriptionViewModel

<h1>Confirm Subscription</h1>
<p>Patient: @Model.Patient.Name (@Model.Patient.ID)</p>
<p>Protocol: @Model.Protocol.Name (@Model.Protocol.ID)</p>
<p>Start Date: @Model.StartDate.ToString("dd-MM-yyyy")</p>

<form method="post" action="@Url.Action("CompleteSubscription", "Patient")">
    <input type="hidden" name="Patient.ID" value="@Model.Patient.ID" />
    <input type="hidden" name="Protocol.ID" value="@Model.Protocol.ID" />
    <input type="hidden" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
    <button type="submit">Confirm and Save</button>
</form>
